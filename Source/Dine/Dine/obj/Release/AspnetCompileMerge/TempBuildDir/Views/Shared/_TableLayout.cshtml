@{
    ViewBag.Title = Dine.Utility.Constants.ToolTitlePrefix + "Table";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div ng-controller="tableController" class="master-view-content">
    <div class="submodules">
        <div class="submodules-band"></div>
        <div class="submodules-options">
            <ul>
                <li class="link_hover establishment_table-msehover classMouseHover">
                    <div class="link_items">ESTABLISHMENT<div class="downarrw"></div></div>
                    <div class="list_content">
                        <div class="submodules-options-link establishment-link-compare establishment-compare-table-msehover classMouseHover">@Html.ActionLink("COMPARE ESTABLISHMENTS", "EstablishmentCompare", "Table")<div class="active-menu"></div></div>
                        <div class="submodules-options-link establishment-link-deep-dive establishment-deep-dive-table-msehover classMouseHover">@Html.ActionLink("ESTABLISHMENT DEEP DIVE", "EstablishmentDeepDive", "Table")</div>
                    </div>
                </li>
                <li class="link_hover beverage_table-msehover classMouseHover">
                    <div class="link_items">BEVERAGES<div class="downarrw"></div></div>
                    <div class="list_content">
                        <div class="submodules-options-link beverage-link-compare beverage-compare-table-msehover classMouseHover">@Html.ActionLink("COMPARE BEVERAGES", "BeverageCompare", "Table")</div>
                        <div class="submodules-options-link beverage-link-deep-dive beverage-deep-dive-table-msehover classMouseHover">@Html.ActionLink("BEVERAGE DEEP DIVE", "BeverageDeepDive", "Table")</div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="master-leftpanel">
        @{Html.RenderPartial("_LeftPanel");}
    </div>
    <div class="master-content-area">

        <div class="filter-info-panel">
            <div class="filter-info-panel-elements"></div>
            <div class="arrow_popup arrow_popup-msehover dynpos1 classMouseHover"><div class="downarrw arrw"></div></div>
            @*<div class="filter-info-panel-expandimg">...>></div>*@
        </div>
        @*<div class="filter-info-popup">
            <div class="filter-info-selected-elmnts"></div>
            <div class="filter-info-close-btn"> X</div>
        </div>*@

        @{Html.RenderPartial("_AdvancedFilter"); }
        <div class="table-bottomlayer">
            <div id="guestFrqncy" class="tbl-dta-rows" style="display:none;">
                <div class="tbl-dta-freq">
                    <div class="tbl-data-freqbdr"></div>
                    <div class="tbl-data-freqtxt"> GUEST FREQUENCY</div>
                </div>
            </div>
            <div class="tbl-emptyrow"></div>
            <table id="flexi-table" class="data" cellpadding="0" cellspacing="0" style="display:none;"></table>
        </div>
        <div class="table-statlayer">
            <ul>
                <li>
                    <div id="samplesize" style="">
                        <ul style="margin:0;padding:0;">
                            <li><div class="table-stat-text table-stat-text-msehover up dynpos1 classMouseHover">STAT TESTING VS. </div></li>
                            <li><div class="table-stat prev_period-msehover up dynpos1 classMouseHover" ng-click="statTest($event)" id="table-prevsperiod">PREVIOUS PERIOD</div></li>
                            <li><div class="table-stat activestat tot-Dine-msehover dynpos1 up classMouseHover" ng-click="statTest($event)" id="table-ttldine">TOTAL DINE</div></li>
                            <li><div class="table-stat category-msehover dynpos1 up classMouseHover" style="display:none" ng-click="statTest($event)" id="table-categry">CATEGORY</div></li>
                            <li><div class="table-stat custom_base-msehover dynpos1 up classMouseHover" ng-click="" id="table-custombse">CUSTOM BASE</div></li>

                        </ul>
                    </div>
                </li>
                <li><div  id="NoteSample" style="float:left;" class="table-stat-empty"><span class="samplesize-note">Note: </span> <span class="samplesize-text">Grey font = Low Sample (30-99), Blank = Sample < 30; NA = Not Applicable</span></div></li>
                <li>
                    <div class="stattest-sign">
                        <ul>
                            <li><div class="outer_circle"><div class="table-stat-sigfncegrenimg"></div></div></li>
                            <li><div class="table-stat-sigfncpstve">Significantly Higher</div></li>
                            <li><div class="outer_circle"><div class="table-stat-sigfnceredimg"></div></div></li>
                            <li><div class="table-stat-sigfncnegve">Significantly Lower</div></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="stat-popup popup_css" style="display:none;">
        <div class="stat-topdiv"><div class="stat-topband  topband"></div><div class="stat-clsebtn"></div></div>
        <div class="stat-closediv popup_css_header">
            <div class="stat-heading heading_text">CUSTOM BASE</div>
        </div>
        <div class="stat-content content_css"></div>
        <div class="stat-submtdiv">
            <div class="stat-submt submit_cancel_btn" ng-click="custombaseSubmit()"> Submit</div>
            <div class="stat-cancel submit_cancel_btn" ng-click="custombaseCancel()">Cancel</div>
        </div>
    </div>

</div>
@RenderBody()
@System.Web.Optimization.Styles.Render("~/bundle/stable")
@System.Web.Optimization.Scripts.Render("~/bundle/jtable")

