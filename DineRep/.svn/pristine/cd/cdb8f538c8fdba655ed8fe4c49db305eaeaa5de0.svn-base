#parent {
    height: 100%;
}

.table-toplayer {
    border: solid 0px;
    width: 99.7%;
    height: 0%;
}

.table-bottomlayer {
    border: solid 1px;
    height: 100%;
    width: 99.7%;
    overflow: auto;
}

#flexi-table table, #flexi-table td, #flexi-table th {
    border: solid 1px;
    border-collapse: collapse;
    padding: 2px;
}

#flexi-table table {
    width: 100%;
}

table, td, th{
    border-collapse: collapse;
}

